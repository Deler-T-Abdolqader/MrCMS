@using MrCMS.Entities.Documents
@using MrCMS.Web.Admin.Infrastructure.Helpers
@model MrCMS.Web.Admin.Models.ContentBlocks.UpdateContentBlockViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
    var contentBlock = ViewData["block"] as ContentBlock;
}

@using (Html.BeginForm("Edit", "ContentBlock", new {Model.Id}, FormMethod.Post))
{
    <fieldset>
        <legend>
            Update @(contentBlock.DisplayName)
            <span class="btn-group pull-right">
                <button type="submit" class="btn btn-primary">Save</button>
            </span>
        </legend>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        @await Html.RenderUpdateCustomAdminProperties(contentBlock)

    </fieldset>
}