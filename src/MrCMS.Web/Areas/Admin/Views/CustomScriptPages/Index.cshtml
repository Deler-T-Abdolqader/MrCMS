@using MrCMS.Entities.Documents.Web
@using X.PagedList
@using X.PagedList.Mvc.Core
@model MrCMS.Web.Admin.Models.CustomScriptPagesSearchModel
@{
    ViewBag.Title = "Custom Script Pages";
    var webpages = ViewData["results"] as IPagedList<Webpage>;
}


<admin-header>
    <row>
        <admin-header-title title="@Html.Resource("admin-user-custom-scripts-pages", "Pages with custom scripts") "/>

        <admin-header-actions>
        </admin-header-actions>
    </row>
</admin-header>

<card>
    <card-body>
        @if (webpages.Any())
        {
            <table class="table table-striped table-condensed">
                <thead>

                <tr>
                    <th>
                        @Html.Resource("Name")
                    </th>
                    <th>
                        @Html.Resource("Custom Header?")
                    </th>
                    <th>
                        @Html.Resource("Custom Footer?")
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var webpage in webpages)
                {
                    <tr>
                        <td>
                            @webpage.Name
                        </td>
                        <td>
                            @(!string.IsNullOrWhiteSpace(webpage.CustomHeaderScripts) ? "✓" : "")
                        </td>
                        <td>
                            @(!string.IsNullOrWhiteSpace(webpage.CustomFooterScripts) ? "✓" : "")
                        </td>
                        <td class="text-right">
                            @Html.ActionLink(Html.Resource("Edit"), "Edit", "Webpage", new {id = webpage.Id}, new {@class = "btn btn-secondary btn-sm"})
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            @Html.PagedListPager(webpages, page => Url.Action("Index", "CustomScriptPages", new {page}), MrCmsPagedListRenderOptions.Bootstrap4)
        }
        else
        {
            <div class="alert alert-info">
                @Html.Resource("admin-custom-script-pages", "No entries found.")
            </div>
        }

    </card-body>
</card>