@model MrCMS.Entities.Documents.Media.MediaFile
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "File", new { id = Model.Id }, FormMethod.Post))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin Delete File", "Delete file")
        <span class="btn-group pull-right">
            <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")" />
        </span>
    </legend>
    <p>@Html.Resource("Admin Delete File Warning", "Deleting this cannot be undone. If this file is referenced anywhere, a broken image link will show. Make sure the file is not in use on your website.")</p>
</fieldset>
}
