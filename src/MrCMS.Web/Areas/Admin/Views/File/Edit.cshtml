@using System.Drawing
@using MrCMS.Helpers
@using MrCMS.Services.FileMigration
@using MrCMS.Web.Admin.Helpers
@model MrCMS.Entities.Documents.Media.MediaFile


<form asp-controller="File" asp-action="Edit" method="post">
    <admin-header>
        <row>
            <admin-header-title title="@Html.Resource("Edit")"/>

            <admin-header-actions>
                <div class="btn-group">
                    <a href="javascript:history.go(-1)" class="btn btn-secondary">@Html.Resource("Back")</a>
                    <input type="submit" class="btn-primary btn" value="@Html.Resource("Save")"/>
                </div>
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>
            @if (Model.IsImage())
            {
                @Html.RenderImage(Model.FileUrl, new Size(100, 100))
            }
            else
            {
                <i class="@Model.FileExtension.GetIconClass()"> </i>
            }
            <br/>
            @Html.Link(Model.FileName, Model.FileUrl)


            <br/>

            @if (Model.MediaCategory != null)
            {
                <p>
                    Folder:
                    <a href="@Url.Action("Show", "MediaCategory", new {id = Model.MediaCategory.Id})">@Model.MediaCategory.Name</a>
                </p>
            }
            <hr/>
            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </card-body>
    </card>

</form>