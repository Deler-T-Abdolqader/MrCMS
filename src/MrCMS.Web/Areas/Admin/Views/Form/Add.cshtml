@model MrCMS.Web.Admin.Models.AddFormModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Add", "Form", FormMethod.Post))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin Form Add", "Add Form")
            <span class="btn-group d-inline pull-right">
                <button type="submit" class="btn-primary btn">@Html.Resource("Save")</button>
            </span>
        </legend>
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new{@class="form-control"})
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </fieldset>
}
