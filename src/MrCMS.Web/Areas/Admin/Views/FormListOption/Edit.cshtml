@using MrCMS.Helpers
@model MrCMS.Web.Admin.Models.UpdateFormListOptionModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "FormListOption", FormMethod.Post, new { @class = "form-update-form" }))
{
    <fieldset>
        <legend>@Html.Resource("Admin Form Edit Option Title", "Edit option")
        <span class="btn-group d-inline pull-right">
            <input type="button" class="btn-primary btn submit-form-btn" value="@Html.Resource("Admin Form Edit Option Button", "Edit option")" />
        </span>
        </legend>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    @Html.LabelFor(option => option.Value)
                    @Html.TextBoxFor(option => option.Value, new { @class = "form-control" })
                    @Html.ValidationMessageFor(option => option.Value)
                </div>

                @Html.InlineCheckboxFor(option => option.Selected)
            </div>
        </div>
    </fieldset>
}
@{ Html.IncludeScript("~/Areas/Admin/scripts/form-builder.js"); }
