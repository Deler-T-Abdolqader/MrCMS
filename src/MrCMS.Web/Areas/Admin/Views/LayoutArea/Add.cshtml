@using MrCMS.Web.Admin.Models
@model MrCMS.Web.Admin.Models.AddLayoutAreaModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}

@using (Html.BeginForm("Add", "LayoutArea", new { id = "" }, FormMethod.Post))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin Layout Areas Add Title", "Add layout area")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-success btn" value="@Html.Resource("Save")" />
            </span>
        </legend>
        @Html.HiddenFor(x => x.LayoutId)
        <div class="form-group">
            @Html.LabelFor(x => x.AreaName)
            @Html.TextBoxFor(x => x.AreaName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AreaName, "", new { @class = "error" })
        </div>
    </fieldset>
}