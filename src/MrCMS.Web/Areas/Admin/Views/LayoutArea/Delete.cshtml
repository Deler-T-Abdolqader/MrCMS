@using MrCMS.Helpers
@model MrCMS.Web.Admin.Models.UpdateLayoutAreaModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "LayoutArea", new { id = Model.Id }, FormMethod.Post, null, new { style = "display:inline;" }))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin Layout Areas Delete Title", "Delete layout area")
            <span class="btn-group  d-inline pull-right">
                <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")" />
            </span>
        </legend>
        <p>@Html.InfoBlock(Html.Resource("Warning") + "!", Html.Resource("Admin Layout Area Delete Info", "Deleting this area can not be undone."), AlertType.danger)</p>
    </fieldset>
}
