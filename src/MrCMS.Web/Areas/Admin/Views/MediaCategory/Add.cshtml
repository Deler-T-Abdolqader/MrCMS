@using MrCMS.Entities.Documents.Media
@model MrCMS.Web.Admin.Models.AddMediaCategoryModel
@{
    ViewBag.Title = "Add media category";
    var parent = ViewData["parent"] as MediaCategory;
}
@section JavaScriptBlock
    {
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/scripts/add-category.js")"></script>
}

@using (Html.BeginForm("Add", "MediaCategory", new { id = "" }, FormMethod.Post, null, new { id = "add-media-category" }))
{
    <fieldset>
        <legend>
            @Html.Resource("Admin Folders Add Title", "Add Folder")
            <button class="btn pull-right btn-primary">
                @Html.Resource("Add")
            </button>
        </legend>
        <div class="row">
            <div class="col-lg-12">
                @Html.HiddenFor(x => x.ParentId)
                @Html.Hidden("ParentUrl", parent?.UrlSegment)
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, "Folder Name")
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.UrlSegment, "Path")
                    @Html.TextBoxFor(x => x.UrlSegment, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UrlSegment, "", new { @class = "error" })
                </div>
                <br />
                @Html.Hidden("DocumentType", "MediaCategory")
            </div>
        </div>
    </fieldset>
}
