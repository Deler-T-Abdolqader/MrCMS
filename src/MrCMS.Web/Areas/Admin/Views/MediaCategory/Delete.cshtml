@using MrCMS.Helpers
@model MrCMS.Web.Admin.Models.UpdateMediaCategoryModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "MediaCategory", new { id = Model.Id }, FormMethod.Post,null, new { style = "display:inline;" }))
{

    <fieldset>
        <legend>@Html.Resource("Admin Folders Delete Title", "Delete folder")
            <span class="btn-group pull-right">
                <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")" />
            </span>
        </legend>
        @Html.InfoBlock(Html.Resource("Heads up") + "!", Html.Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}
