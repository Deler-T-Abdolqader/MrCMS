@using System.Linq
@using MrCMS.Entities.Documents.Web
@using MrCMS.Helpers
@using MrCMS.Web.Admin.Models
@using X.PagedList
@using X.PagedList.Mvc.Core
@model MrCMS.Web.Admin.Models.PageTemplateSearchQuery
@{
    var results = ViewData["results"] as IPagedList<PageTemplate>;
}
<h1 class="page-header">
    @Html.Resource("Admin Page Templates", "Page Templates")
    <span class="btn-group d-inline pull-right">
        @Html.ActionLink("Add", "Add", "PageTemplate", null, new { @class = "btn btn-primary", data_toggle = "fb-modal" })
    </span>
</h1>

@if (results.Any())
{
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.Resource("Name")
                </th>
                <th>
                    @Html.Resource("Page Type")
                </th>
                <th>
                    @Html.Resource("Template Name")
                </th>
                <th>
                    @Html.Resource("Layout Name")
                </th>
                <th>
                    @Html.Resource("Url Generator")
                </th>
                <th>
                    @Html.Resource("Admin Page Templates Single Use", "Single Use")?
                </th>
                <th>
                    @Html.Resource("Actions")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var template in results)
            {
                <tr>
                    <td>
                        @template.Name
                    </td>
                    <td>
                        @template.GetPageTypeName()
                    </td>
                    <td>
                        @template.PageTemplateName
                    </td>
                    <td>
                        @template.GetLayoutName()
                    </td>
                    <td>
                        @template.GetUrlGeneratorType().Name.BreakUpString()
                    </td>
                    <td>
                        @template.SingleUse
                    </td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink(Html.Resource("Edit"), "Edit", "PageTemplate", new { id = template.Id }, new { @class = "btn btn-sm btn-secondary", data_toggle = "fb-modal" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(results, page => Url.Action("Index", new { page }))
}
else
{
    <p>
        @Html.Resource("Admin Page Templates None", "No page templates meet your criteria")
    </p>
}