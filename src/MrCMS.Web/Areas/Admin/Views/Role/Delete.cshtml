@using MrCMS.Helpers
@using MrCMS.Web.Admin.Models
@model MrCMS.Web.Admin.Models.UpdateRoleModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "Role", FormMethod.Post))
{
    <fieldset>
        <legend>@Html.Resource("Admin User Roles Delete", "Delete role")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-danger btn" value="@Html.Resource("Delete")" />
            </span>
        </legend>
        @Html.InfoBlock(Html.Resource("Heads up") + "!", Html.Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}