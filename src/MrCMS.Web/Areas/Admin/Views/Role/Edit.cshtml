@model MrCMS.Web.Admin.Models.UpdateRoleModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "Role", FormMethod.Post))
{
    <fieldset>
        <legend>@Html.Resource("Admin User Roles Edit", "Edit Role")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@Html.Resource("Save")" />
            </span>
        </legend>
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </fieldset>
}