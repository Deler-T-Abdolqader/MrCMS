@using MrCMS.Helpers
@using MrCMS.Services
@using MrCMS.Web.Admin.Models
@inject IDocumentMetadataService DocumentMetadataService
@model IList<MrCMS.Web.Admin.Models.WebpageStats>
    
<div class="card">
    <div class="card-body">
        <h4>@Html.Resource("Admin Dashboard Page stats", "Page stats")</h4>
        <table class="table table-striped table-condensed" style="overflow: scroll">
            <thead>
            <tr>
                <th>
                    @Html.Resource("Admin Dashboard Page Stats", "Page type")
                </th>
                <th>
                    @Html.Resource("Admin Dashboard Total", "Total")
                </th>
                <th>
                    @Html.Resource("Admin Dashboard Unpublished", "Unpublished")
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var stat in Model)
            {
                <tr>
                    <td>@DocumentMetadataService.GetMetadataByTypeName(stat.DocumentType).Name</td>
                    <td>
                        @stat.NumberOfPages
                    </td>
                    <td>
                        @stat.NumberOfUnPublishedPages
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>