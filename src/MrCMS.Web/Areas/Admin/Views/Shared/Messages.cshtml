@using MrCMS.Helpers
@using MrCMS.Web.Admin.Helpers
@model dynamic


@if (TempData.SuccessMessages().Any())
{
    <div class="alert alert-success m-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.SuccessMessages()))
    </div>
}
@if (TempData.ErrorMessages().Any())
{
    <div class="alert alert-danger m-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.ErrorMessages()))
    </div>
}
@if (TempData.InfoMessages().Any())
{
    <div class="alert alert-info m-2">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.Raw(string.Join("<br />", TempData.InfoMessages()))
    </div>
}
