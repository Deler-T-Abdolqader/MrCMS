@using MrCMS.Helpers
@using MrCMS.Models
@model MrCMS.Web.Admin.Models.AddSiteModel

<form asp-controller="Sites" asp-action="Add" method="post">

    <admin-header>
        <row>
            <admin-header-title title="@Html.Resource("admin-add-site", "Add Site") "/>

            <admin-header-actions>
                <div class="btn btn-group">
                    <a asp-action="Index" class="btn btn-secondary">@Html.Resource("admin-back", "Back")</a>
                    <input type="submit" class="btn-primary btn" value="@Html.Resource("admin-save", "Save")"/>

                </div>

            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>

            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.BaseUrl)
                        @Html.TextBoxFor(x => x.BaseUrl, new {@class = "form-control"})
                        @Html.ValidationMessageFor(x => x.BaseUrl)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <partial name="CloneOptions" model="Model"/>
                </div>
            </div>
        </card-body>
    </card>

</form>

@{ Html.IncludeScript("~/Areas/Admin/scripts/add-site.js"); }