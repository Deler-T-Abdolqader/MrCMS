@using MrCMS.Web.Admin.Models
@using MrCMS.Web.Admin.Services
@model AddSiteModel
@inject ISiteCloneOptionsAdminService AdminService
@{
    var otherSites = AdminService.GetOtherSiteOptions();
    var partOptions = AdminService.GetClonePartOptions();
}

<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>
                Option
            </th>
            <th>
                Copy From
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <strong>Copy all from:</strong>
            </td>
            <td>
                @Html.DropDownList("copy-all", otherSites, new { @class = "form-control" })
            </td>
        </tr>
        @foreach (var option in partOptions)
        {
            <tr>
                <td>
                    @option.DisplayName
                </td>
                <td>
                    @Html.DropDownList("sco-" + option.TypeName, otherSites, new { @class = "form-control input-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>