@using MrCMS.Helpers
@using MrCMS.Web.Admin.Models
@model MrCMS.Web.Admin.Models.TaskUpdateData
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "Task", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TypeName)
    <fieldset>
        <legend>
            @Html.Resource("Admin Tasks Edit", "Edit task")
            <span class="btn-group pull-right">
                <input type="submit" class="btn-primary btn" value="@Html.Resource("Save")" />
            </span>
        </legend>
        <div class="form-group">
            <label>Type</label>
            <div>
                @Model.Name
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(task => task.FrequencyInSeconds)
            @Html.TextBoxFor(task => task.FrequencyInSeconds, new { @class = "form-control" })
            @Html.ValidationMessageFor(task => task.FrequencyInSeconds)
        </div>
        <div class="form-group">
            @Html.InlineCheckboxFor(x => x.Enabled)
        </div>
    </fieldset>
}