@using MrCMS.Entities.Documents.Web
@using MrCMS.Helpers
@using MrCMS.Services
@using MrCMS.Web.Admin.Infrastructure.Helpers
@model MrCMS.Web.Admin.Models.WebpageEdit.WebpagePropertiesTabViewModel
@inject IDocumentMetadataService DocumentMetadataService
@{
    var webpage = ViewData["webpage"] as Webpage;
}
@Html.HiddenFor(x => x.LiveUrlSegment)
@Html.HiddenFor(x => x.DocumentType)
@Html.HiddenFor(x => x.Id)


<div class="form-group">
    <label asp-for="Name"></label>
    @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
    @Html.ValidationMessageFor(x => x.Name)
</div>

@if (DocumentMetadataService.GetDocumentMetadata(Html, Model.Id).HasBodyContent)
{
    <div class="body-content">
        <!-- leave this class here for fixing the bar to top only for body content -->
        @Html.TextAreaFor(x => x.BodyContent, new {@class = "ckedit-enabled"})
    </div>
}
@await Html.RenderUpdateCustomAdminProperties(webpage)